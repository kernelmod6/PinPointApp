<UserControl x:Class="PinPoint.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinPoint.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <CheckBox Content="Start with Windows" Margin="0,5,0,5"/>
            <CheckBox Content="Show in system tray" IsChecked="True" Margin="0,5,0,5"/>
            <CheckBox Content="Show HUD" IsChecked="True" Margin="0,5,0,5"/>
            
            <TextBlock Text="Hotkeys" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
            
            <Grid Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Toggle Overlay:"/>
                <TextBox Grid.Column="1" Text="Ctrl+Shift+X" IsReadOnly="True"/>
            </Grid>
            
            <Grid Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Cycle Crosshair Style:"/>
                <TextBox Grid.Column="1" Text="Ctrl+Shift+C" IsReadOnly="True"/>
            </Grid>
            
            <Button Content="Save Settings" HorizontalAlignment="Right" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
