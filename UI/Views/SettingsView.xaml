                                                                                                    <DropShadowEffect ShadowDepth="1" 
                                                                                                                     BlurRadius="4" 
                                                                                                                     Opacity="0.3" 
                                                                                                                     Color="Black"/>
                                                                                                </Ellipse.Effect>
                                                                                            </Ellipse>
                                                                                        </Grid>
                                                                                    </ControlTemplate>
                                                                                </Thumb.Template>
                                                                            </Thumb>
                                                                        </Track.Thumb>
                                                                    </Track>
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Slider.Resources>
                                        </Slider>
                                        
                                        <!-- Scale Labels -->
                                        <Grid Margin="5,4,5,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Text="75%" 
                                                     Grid.Column="0" 
                                                     FontSize="11" 
                                                     Foreground="{StaticResource TextSecondaryBrush}"/>
                                            
                                            <TextBlock Text="150%" 
                                                     Grid.Column="2" 
                                                     FontSize="11" 
                                                     Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Behavior Section -->
                    <StackPanel x:Name="BehaviorSection" Visibility="Collapsed" Margin="0,20,0,0">
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Application" Style="{StaticResource SettingsSectionStyle}"/>
                                
                                <!-- Start with Windows -->
                                <Grid Margin="0,16,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Start with Windows" Style="{StaticResource SettingsOptionStyle}"/>
                                        <TextBlock Text="Launch automatically when your computer starts" 
                                                 Style="{StaticResource SettingsDescriptionStyle}"/>
                                    </StackPanel>
                                    
                                    <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" IsChecked="False"/>
                                </Grid>
                                
                                <!-- Minimize to tray -->
                                <Grid Margin="0,16,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Minimize to System Tray" Style="{StaticResource SettingsOptionStyle}"/>
                                        <TextBlock Text="Keep application running in the background when closed" 
                                                 Style="{StaticResource SettingsDescriptionStyle}"/>
                                    </StackPanel>
                                    
                                    <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" IsChecked="True"/>
                                </Grid>
                                
                                <!-- Launch minimized -->
                                <Grid Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Start Minimized" Style="{StaticResource SettingsOptionStyle}"/>
                                        <TextBlock Text="Launch the application in the system tray without showing the window" 
                                                 Style="{StaticResource SettingsDescriptionStyle}"/>
                                    </StackPanel>
                                    
                                    <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" IsChecked="False"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Crosshair Behavior Card -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Crosshair" Style="{StaticResource SettingsSectionStyle}"/>
                                
                                <!-- Auto-hide -->
                                <Grid Margin="0,16,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Auto-hide in non-game applications" Style="{StaticResource SettingsOptionStyle}"/>
                                        <TextBlock Text="Automatically hide the crosshair when not in a game" 
                                                 Style="{StaticResource SettingsDescriptionStyle}"/>
                                    </StackPanel>
                                    
                                    <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" IsChecked="False"/>
                                </Grid>
                                
                                <!-- Game detection mode -->
                                <TextBlock Text="Game Detection Mode" Style="{StaticResource SettingsOptionStyle}" Margin="0,0,0,8"/>
                                <TextBlock Text="Select how the application detects games for auto-switching profiles" 
                                         Style="{StaticResource SettingsDescriptionStyle}" Margin="0,0,0,16"/>
                                
                                <ComboBox x:Name="GameDetectionModeComboBox" 
                                         Style="{StaticResource ModernComboBoxStyle}"
                                         Width="300"
                                         HorizontalAlignment="Left">
                                    <ComboBoxItem Content="Automatic (Recommended)" IsSelected="True"/>
                                    <ComboBoxItem Content="Process Monitoring"/>
                                    <ComboBoxItem Content="Window Title Detection"/>
                                    <ComboBoxItem Content="Manual Selection"/>
                                </ComboBox>
                                
                                <!-- Performance mode -->
                                <Grid Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Low-latency Mode" Style="{StaticResource SettingsOptionStyle}"/>
                                        <TextBlock Text="Prioritize crosshair rendering for minimal delay (increases CPU usage)" 
                                                 Style="{StaticResource SettingsDescriptionStyle}"/>
                                    </StackPanel>
                                    
                                    <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" IsChecked="True"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Hotkeys Card -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Hotkeys" Style="{StaticResource SettingsSectionStyle}"/>
                                
                                <TextBlock Text="Global shortcuts to control the application" 
                                         Style="{StaticResource SettingsDescriptionStyle}" Margin="0,4,0,16"/>
                                
                                <!-- Toggle visibility hotkey -->
                                <Grid Margin="0,8,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Toggle Crosshair Visibility" 
                                             VerticalAlignment="Center"
                                             Style="{StaticResource SettingsOptionStyle}"/>
                                    
                                    <Border Grid.Column="1" 
                                          BorderThickness="1" 
                                          BorderBrush="#3A454F" 
                                          Background="#15FFFFFF"
                                          CornerRadius="4" 
                                          Padding="12,8" 
                                          Width="160">
                                      <TextBlock Text="Alt + X" 
                                               HorizontalAlignment="Center" 
                                               FontFamily="Consolas" 
                                               FontSize="14"/>
                                    </Border>
                                </Grid>
                                
                                <!-- Cycle profiles hotkey -->
                                <Grid Margin="0,8,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Cycle Through Profiles" 
                                             VerticalAlignment="Center"
                                             Style="{StaticResource SettingsOptionStyle}"/>
                                    
                                    <Border Grid.Column="1" 
                                          BorderThickness="1" 
                                          BorderBrush="#3A454F" 
                                          Background="#15FFFFFF"
                                          CornerRadius="4" 
                                          Padding="12,8" 
                                          Width="160">
                                      <TextBlock Text="Alt + C" 
                                               HorizontalAlignment="Center" 
                                               FontFamily="Consolas" 
                                               FontSize="14"/>
                                    </Border>
                                </Grid>
                                
                                <!-- Open settings hotkey -->
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Open Settings Window" 
                                             VerticalAlignment="Center"
                                             Style="{StaticResource SettingsOptionStyle}"/>
                                    
                                    <Border Grid.Column="1" 
                                          BorderThickness="1" 
                                          BorderBrush="#3A454F" 
                                          Background="#15FFFFFF"
                                          CornerRadius="4" 
                                          Padding="12,8" 
                                          Width="160">
                                      <TextBlock Text="Alt + S" 
                                               HorizontalAlignment="Center" 
                                               FontFamily="Consolas" 
                                               FontSize="14"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Performance Section -->
                    <StackPanel x:Name="PerformanceSection" Visibility="Collapsed" Margin="0,20,0,0">
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Rendering" Style="{StaticResource SettingsSectionStyle}"/>
                                
                                <!-- Hardware Acceleration -->
                                <Grid Margin="0,16,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Use Hardware Acceleration" Style="{StaticResource SettingsOptionStyle}"/>
                                        <TextBlock Text="Utilize your GPU for smoother rendering (recommended)" 
                                                 Style="{StaticResource SettingsDescriptionStyle}"/>
                                    </StackPanel>
                                    
                                    <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" IsChecked="True"/>
                                </Grid>
                                
                                <!-- FPS Limiter -->
                                <Grid Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Limit Frame Rate" Style="{StaticResource SettingsOptionStyle}"/>
                                        <TextBlock Text="Reduce CPU usage by limiting maximum FPS" 
                                                 Style="{StaticResource SettingsDescriptionStyle}"/>
                                    </StackPanel>
                                    
                                    <ComboBox Grid.Column="1" 
                                             Width="120" 
                                             SelectedIndex="2" 
                                             Style="{StaticResource ModernComboBoxStyle}">
                                        <ComboBoxItem Content="No limit"/>
                                        <ComboBoxItem Content="60 FPS"/>
                                        <ComboBoxItem Content="120 FPS"/>
                                        <ComboBoxItem Content="144 FPS"/>
                                        <ComboBoxItem Content="240 FPS"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Advanced Section -->
                    <StackPanel x:Name="AdvancedSection" Visibility="Collapsed" Margin="0,20,0,0">
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Developer Options" Style="{StaticResource SettingsSectionStyle}"/>
                                
                                <!-- Debug Mode -->
                                <Grid Margin="0,16,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Debug Mode" Style="{StaticResource SettingsOptionStyle}"/>
                                        <TextBlock Text="Enable detailed logging and debug information" 
                                                 Style="{StaticResource SettingsDescriptionStyle}"/>
                                    </StackPanel>
                                    
                                    <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" IsChecked="False"/>
                                </Grid>
                                
                                <!-- Data Export -->
                                <Grid Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Export Settings" Style="{StaticResource SettingsOptionStyle}"/>
                                        <TextBlock Text="Save your current configuration to a file" 
                                                 Style="{StaticResource SettingsDescriptionStyle}"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="1" 
                                           Content="Export" 
                                           Style="{StaticResource ModernActionButton}"
                                           Width="130"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- About Section - Modern Redesign -->
                    <StackPanel x:Name="AboutSection" Visibility="Collapsed" Margin="0,20,0,0">
                        <!-- App Info Card -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel Margin="20">
                                <!-- App Header with Logo -->
                                <StackPanel HorizontalAlignment="Center" Margin="0,10,0,30">
                                    <!-- App Logo -->
                                    <Ellipse Width="80" Height="80" Margin="0,0,0,16">
                                        <Ellipse.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#3498DB" Offset="0"/>
                                                <GradientStop Color="#2980B9" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Ellipse.Fill>
                                        <Ellipse.Effect>
                                            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    
                                    <!-- App Name -->
                                    <TextBlock Text="PinPoint" 
                                             FontSize="28" 
                                             FontWeight="SemiBold" 
                                             Foreground="White" 
                                             HorizontalAlignment="Center"/>
                                    
                                    <!-- App Tagline -->
                                    <TextBlock Text="Professional Crosshair Overlay" 
                                             FontSize="16" 
                                             Foreground="#B9C3CD" 
                                             HorizontalAlignment="Center" 
                                             Margin="0,4,0,0"/>
                                </StackPanel>
                                
                                <!-- Version Info Panel -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Version Info -->
                                    <Border Grid.Column="0" 
                                          Background="#15FFFFFF" 
                                          CornerRadius="8" 
                                          Margin="0,0,10,0" 
                                          Padding="20">
                                        <StackPanel>
                                            <TextBlock Text="APPLICATION INFO" 
                                                     FontSize="12" 
                                                     FontWeight="SemiBold" 
                                                     Foreground="#8A99A8"
                                                     Margin="0,0,0,16"/>
                                            
                                            <Grid Margin="0,4,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Version" Foreground="#8A99A8"/>
                                                <TextBlock Grid.Column="1" Text="1.0.0" Foreground="White" FontWeight="Medium"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,4,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Build" Foreground="#8A99A8"/>
                                                <TextBlock Grid.Column="1" Text="2023.05.15" Foreground="White" FontWeight="Medium"/>
                                            </Grid>
                                            
                                            <Grid Margin="0,4,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Framework" Foreground="#8A99A8"/>
                                                <TextBlock Grid.Column="1" Text=".NET Framework 4.8" Foreground="White" FontWeight="Medium"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Team/Contact Info -->
                                    <Border Grid.Column="1" 
                                          Background="#15FFFFFF" 
                                          CornerRadius="8" 
                                          Margin="10,0,0,0" 
                                          Padding="20">
                                        <StackPanel>
                                            <TextBlock Text="TEAM" 
                                                     FontSize="12" 
                                                     FontWeight="SemiBold" 
                                                     Foreground="#8A99A8"
                                                     Margin="0,0,0,16"/>
                                            
                                            <TextBlock Text=" 2023 PinPoint Team" 
                                                     Foreground="White" 
                                                     FontWeight="Medium"
                                                     Margin="0,4,0,8"/>
                                            
                                            <TextBlock Text="All rights reserved" 
                                                     Foreground="#8A99A8"
                                                     Margin="0,0,0,16"/>
                                            
                                            <TextBlock>
                                                <Hyperlink 
                                                    NavigateUri="mailto:support@pinpoint.com" 
                                                    RequestNavigate="Hyperlink_RequestNavigate"
                                                    Foreground="#3498DB">
                                                    <TextBlock Text="support@pinpoint.com" 
                                                             Foreground="#3498DB"/>
                                                </Hyperlink>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Links Section -->
                        <Border Style="{StaticResource SettingsCardStyle}" Margin="0,16,0,0">
                            <StackPanel Margin="20">
                                <TextBlock Text="Links &amp; Resources" 
                                         FontSize="18" 
                                         FontWeight="SemiBold" 
                                         Margin="0,0,0,16"/>
                                         
                                <!-- Social Buttons -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Website Button -->
                                    <Border Grid.Column="0" 
                                          Background="#252E38" 
                                          CornerRadius="8" 
                                          Margin="5" 
                                          Cursor="Hand">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.2" Color="Black"/>
                                        </Border.Effect>
                                        <Button Content="Website" 
                                               Background="Transparent"
                                               BorderThickness="0" 
                                               Foreground="White"
                                               FontWeight="Medium"
                                               FontSize="13"
                                               Click="ResourceLink_Click" 
                                               Tag="https://pinpoint.com"
                                               Cursor="Hand"
                                               Height="45"
                                               HorizontalContentAlignment="Center"
                                               VerticalContentAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Documentation Button -->
                                    <Border Grid.Column="1" 
                                          Background="#252E38" 
                                          CornerRadius="8" 
                                          Margin="5" 
                                          Cursor="Hand">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.2" Color="Black"/>
                                        </Border.Effect>
                                        <Button Content="Documentation" 
                                               Background="Transparent"
                                               BorderThickness="0" 
                                               Foreground="White"
                                               FontWeight="Medium"
                                               FontSize="13"
                                               Click="ResourceLink_Click" 
                                               Tag="https://docs.pinpoint.com"
                                               Cursor="Hand"
                                               Height="45"
                                               HorizontalContentAlignment="Center"
                                               VerticalContentAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Support Button -->
                                    <Border Grid.Column="2" 
                                          Background="#252E38" 
                                          CornerRadius="8" 
                                          Margin="5" 
                                          Cursor="Hand">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.2" Color="Black"/>
                                        </Border.Effect>
                                        <Button Content="Support" 
                                               Background="Transparent"
                                               BorderThickness="0" 
                                               Foreground="White"
                                               FontWeight="Medium"
                                               FontSize="13"
                                               Click="ResourceLink_Click" 
                                               Tag="https://support.pinpoint.com"
                                               Cursor="Hand"
                                               Height="45"
                                               HorizontalContentAlignment="Center"
                                               VerticalContentAlignment="Center"/>
                                    </Border>
                                </Grid>
                                
                                <!-- Social Links Row -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                                    <Button Content="Discord" 
                                           Width="90" 
                                           Height="32" 
                                           Margin="5,0" 
                                           Background="#5865F2" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           Click="ResourceLink_Click" 
                                           Tag="https://discord.gg/pinpoint"
                                           Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="16"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    
                                    <Button Content="Twitter" 
                                           Width="90" 
                                           Height="32" 
                                           Margin="5,0" 
                                           Background="#1DA1F2" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           Click="ResourceLink_Click" 
                                           Tag="https://twitter.com/pinpoint"
                                           Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="16"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    
                                    <Button Content="GitHub" 
                                           Width="90" 
                                           Height="32" 
                                           Margin="5,0" 
                                           Background="#333333" 
                                           Foreground="White" 
                                           BorderThickness="0"
                                           Click="ResourceLink_Click" 
                                           Tag="https://github.com/pinpoint"
                                           Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="16"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
