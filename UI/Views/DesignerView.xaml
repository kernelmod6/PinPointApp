<UserControl x:Class="PinPoint.UI.Views.DesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinPoint.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Crosshair Preview -->
        <Border Grid.Column="0" Background="#333333" Margin="5">
            <Canvas x:Name="CrosshairPreview" ClipToBounds="True">
                <!-- Crosshair is drawn here based on settings -->
                <Path x:Name="CrosshairPath" Stroke="{Binding CrosshairColor}" StrokeThickness="{Binding CrosshairThickness}" 
                      Canvas.Left="{Binding CrosshairLeft}" Canvas.Top="{Binding CrosshairTop}">
                    <Path.Data>
                        <GeometryGroup>
                            <LineGeometry StartPoint="-10,0" EndPoint="10,0"/>
                            <LineGeometry StartPoint="0,-10" EndPoint="0,10"/>
                        </GeometryGroup>
                    </Path.Data>
                </Path>
            </Canvas>
        </Border>
        
        <!-- Settings Panel -->
        <Border Grid.Column="1" Background="White" Margin="5" Padding="10" BorderBrush="#DDDDDD" BorderThickness="1">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Crosshair Style" FontWeight="Bold" Margin="0,10,0,5"/>
                    <ComboBox x:Name="StyleComboBox" SelectionChanged="StyleComboBox_SelectionChanged">
                        <ComboBoxItem Content="Cross" IsSelected="True"/>
                        <ComboBoxItem Content="Dot"/>
                        <ComboBoxItem Content="Circle"/>
                    </ComboBox>
                    
                    <TextBlock Text="Color" FontWeight="Bold" Margin="0,15,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Height="30" Background="{Binding CrosshairColor}" Margin="0,0,5,0" BorderBrush="Black" BorderThickness="1"/>
                        <Button Grid.Column="1" Content="Choose..." Click="ChooseColor_Click"/>
                    </Grid>
                    
                    <TextBlock Text="Size" FontWeight="Bold" Margin="0,15,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Slider Grid.Column="0" x:Name="SizeSlider" Minimum="5" Maximum="50" Value="{Binding CrosshairSize}"
                                ValueChanged="SizeSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" Width="30" Text="{Binding ElementName=SizeSlider, Path=Value, StringFormat={}{0:0}}" TextAlignment="Right"/>
                    </Grid>
                    
                    <TextBlock Text="Thickness" FontWeight="Bold" Margin="0,15,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Slider Grid.Column="0" x:Name="ThicknessSlider" Minimum="1" Maximum="10" Value="{Binding CrosshairThickness}"
                                ValueChanged="ThicknessSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" Width="30" Text="{Binding ElementName=ThicknessSlider, Path=Value, StringFormat={}{0:0.0}}" TextAlignment="Right"/>
                    </Grid>
                    
                    <TextBlock Text="Opacity" FontWeight="Bold" Margin="0,15,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Slider Grid.Column="0" x:Name="OpacitySlider" Minimum="0" Maximum="1" Value="{Binding CrosshairOpacity}" 
                                SmallChange="0.05" LargeChange="0.2" ValueChanged="OpacitySlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" Width="30" Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat={}{0:P0}}" TextAlignment="Right"/>
                    </Grid>
                    
                    <Button Content="Apply Settings" Margin="0,20,0,0" Click="ApplySettings_Click" HorizontalAlignment="Right"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
