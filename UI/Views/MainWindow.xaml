<Window x:Class="PinPoint.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PinPoint.UI.Views"
        mc:Ignorable="d"
        Title="PinPoint" Height="450" Width="800"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#333333" Padding="15">
            <TextBlock Text="PinPoint Crosshair" Foreground="White" FontSize="20" FontWeight="Bold"/>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="5">
            <TabItem Header="Designer">
                <local:DesignerView x:Name="DesignerView"/>
            </TabItem>
            <TabItem Header="Settings">
                <local:SettingsView x:Name="SettingsView"/>
            </TabItem>
            <TabItem Header="About">
                <local:AboutView x:Name="AboutView"/>
            </TabItem>
        </TabControl>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#EEEEEE" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="PinPoint v1.0" Foreground="#333333"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox Content="Show Overlay" IsChecked="True" VerticalAlignment="Center"
                              Checked="ShowOverlay_Checked" Unchecked="ShowOverlay_Unchecked"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 